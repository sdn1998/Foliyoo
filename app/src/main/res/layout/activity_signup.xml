<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">

    <Button
        android:id="@+id/button4"
        style="@style/login"
        android:layout_width="375dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/red_button"
        android:text="@string/sign_up"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:gravity="top"
        android:lineSpacingExtra="8sp"
        android:text="@string/sign_up"
        android:textAppearance="@style/sign_up_heading"
        android:textStyle="bold"
        android:translationY="-3.94sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        style="@style/business"
        android:layout_width="149dp"
        android:layout_height="55dp"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/button_selector"
        android:focusable="auto"
        android:onClick="personal"
        android:text="@string/personal"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        style="@style/business"
        android:layout_width="149dp"
        android:layout_height="55dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="178dp"
        android:background="@drawable/button_selector"
        android:onClick="business"
        android:text="@string/business"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText3"
        style="@style/enter_full_"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="324dp"
        android:background="@drawable/input_rectangle"
        android:ems="10"
        android:hint="@string/enter_email"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText5"
        style="@style/enter_full_"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="471dp"
        android:background="@drawable/input_rectangle"
        android:ems="10"
        android:hint="@string/enter_gst_n"
        android:visibility="invisible"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText7"
        style="@style/enter_full_"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="398dp"
        android:background="@drawable/input_rectangle"
        android:ems="10"
        android:hint="@string/enter_mobile"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText4"
        style="@style/enter_full_"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="251dp"
        android:background="@drawable/input_rectangle"
        android:ems="10"
        android:hint="@string/enter_full_name"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText6"
        style="@style/enter_full_"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="471dp"
        android:background="@drawable/input_rectangle"
        android:ems="10"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText8"
        style="@style/enter_full_"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="544dp"
        android:background="@drawable/input_rectangle"
        android:ems="10"
        android:hint="@string/enter_password"
        android:visibility="invisible"
        android:inputType="textPassword"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_backward_arrow_24px" />

    <TextView
        android:id="@+id/textView2"
        style="@style/by_creating"
        android:layout_width="297dp"
        android:layout_height="40dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="612dp"
        android:layout_marginEnd="57dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/by_creating" />

</androidx.constraintlayout.widget.ConstraintLayout>