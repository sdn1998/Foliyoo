<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >

    <TextView
        android:id="@+id/text_home"
        style="@style/select_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/select_load"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="72dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RadioButton
            android:id="@+id/full_load"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/radiobutton_full_load"
            android:text="@string/full_load" />

        <RadioButton
            android:id="@+id/part_load"
            android:layout_width="119dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/radiobutton_part_load"
            android:text="@string/part_load" />

        <RadioButton
            android:id="@+id/box_load"
            android:layout_width="119dp"
            android:layout_height="45dp"

            android:background="@drawable/radiobutton_box_load"
            android:text="@string/box_load" />
    </RadioGroup>

    <EditText
        android:id="@+id/pickup"
        style="@style/enter_your_user"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="138dp"
        android:background="@drawable/input_rectangle"
        android:drawableLeft="@drawable/ic_pin"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/pick_up_loc"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pickup2"
        style="@style/enter_your_user"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="207dp"
        android:background="@drawable/input_rectangle"
        android:drawableLeft="@drawable/ic_pin"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/delivery_lo"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="59dp"
        android:layout_height="57dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="172dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_toggel_icon_24px" />

    <EditText
        android:id="@+id/pickup5"
        style="@style/enter_your_user"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="343dp"
        android:background="@drawable/input_rectangle"
        android:drawableLeft="@drawable/ic_pin"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/select_mate"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pickup3"
        style="@style/enter_your_user"
        android:layout_width="180dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/input_rectangle"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/pickup_date"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pickup6"
        style="@style/enter_your_user"
        android:layout_width="180dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/input_rectangle"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/truck_type"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pickup4"
        style="@style/enter_your_user"
        android:layout_width="180dp"
        android:layout_height="54dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/input_rectangle"
        android:drawableLeft="@drawable/ic_clock"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/truck_size"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pickup7"
        style="@style/enter_your_user"
        android:layout_width="180dp"
        android:layout_height="54dp"
        android:layout_marginTop="425dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/input_rectangle"
        android:drawableLeft="@drawable/ic_clock"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/pickup_time"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        style="@style/login"
        android:layout_width="192dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="509dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/red_button"
        android:text="@string/next"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>